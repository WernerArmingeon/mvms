#! /bin/sh

mkdir -p $MVMS
mkdir -p $BOOT
mkdir -p $ROOTFS

cd $MVMS

git clone git://git.yoctoproject.org/poky
cd poky
git checkout dizzy -b $BRANCH

git clone git://git.openembedded.org/meta-openembedded
cd meta-openembedded
git checkout origin/dizzy -b $BRANCH
cd ..

# git clone git://github.com/meta-qt5/meta-qt5.git
# cd meta-qt5
# git checkout origin/master -b $BRANCH
# cd ..

git clone git://github.com/linux4sam/meta-atmel.git meta-atmel
cd meta-atmel
git checkout origin/dizzy -b $BRANCH
cd ..

set >vars-before
source oe-init-build-env build-$BRANCH
set >vars-after

echo # bitbake $IMAGE
